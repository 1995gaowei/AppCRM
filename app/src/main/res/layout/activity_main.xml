<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ago.appcrm.MainActivity">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/company_customer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        layout="@layout/layout_home_tab" />


    <include
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/company_opportunity"
        android:layout_below="@id/company_customer"
        android:layout_centerHorizontal="true"
        layout="@layout/layout_home_tab"
        android:layout_marginTop="20dp" />

    <include
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/company_contract"
        android:layout_below="@id/company_opportunity"
        android:layout_centerHorizontal="true"
        layout="@layout/layout_home_tab"
        android:layout_marginTop="20dp" />

    <include
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/company_business"
        android:layout_below="@id/company_contract"
        android:layout_centerHorizontal="true"
        layout="@layout/layout_home_tab"
        android:layout_marginTop="20dp" />

    <include
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/company_contacts"
        android:layout_below="@id/company_business"
        android:layout_centerHorizontal="true"
        layout="@layout/layout_home_tab"
        android:layout_marginTop="20dp" />

    <include
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/company_product"
        android:layout_below="@id/company_contacts"
        android:layout_centerHorizontal="true"
        layout="@layout/layout_home_tab"
        android:layout_marginTop="20dp" />



</RelativeLayout>
</ScrollView>